<div class="container">
  <h1>New review for <%= @restaurant.name %></h1>

  <%= simple_form_for [@restaurant, @review] do |f|  %>
    <%= f.input :rating, collection: Review::RATINGS %>
    <%= f.input :content %>
    <%= f.submit "Submit your review", class: "btn btn-primary" %>
  <% end %>
</div>
