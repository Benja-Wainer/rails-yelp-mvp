<div class="container">
  <h1><%= @restaurant.name %></h1>

  <p><strong>Address:</strong> <%= @restaurant.address %></p>
  <p><strong>Phone number:</strong> <%= @restaurant.phone_number %></p>
  <p><strong>Category:</strong> <%= @restaurant.category %></p>
  <br>

  <p><strong>Reviews</strong></p>
  <ul class="list-group">
    <% @restaurant.reviews.each do |review| %>
      <li class="list-group-item"><%= "⭐" * review.rating %> - <%= review.content %></li>
    <% end %>
  </ul>
  <%= link_to "Add a new review", new_restaurant_review_path(@restaurant) %>
  <br>

  <%= link_to "Return to restaurants list", restaurants_path %>
</div>
